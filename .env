# Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# PostgreSQL Database
DB_HOST=db
DB_PORT=5432
DB_NAME=self_service
DB_USER=postgres
DB_PASSWORD=postgres

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Security
BCRYPT_SALT_ROUNDS=10
COOKIE_SECURE=false  # Set to true in production
COOKIE_MAX_AGE=86400000  # 24 hours in milliseconds

# SQL Server Connection Pooling
SQL_POOL_MIN=0
SQL_POOL_MAX=10
SQL_POOL_IDLE_TIMEOUT=30000  # 30 seconds
SQL_CONNECTION_TIMEOUT=30000  # 30 seconds
SQL_REQUEST_TIMEOUT=30000    # 30 seconds

# Audit Settings
AUDIT_RETENTION_DAYS=90     # Number of days to keep audit logs
AUDIT_BATCH_SIZE=1000       # Number of records to process in batch

# Monitoring
ENABLE_PERFORMANCE_METRICS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Cache Settings
CACHE_TTL=300               # 5 minutes in seconds
CACHE_CHECK_PERIOD=60       # Check for expired items every minute

# Query Limits
MAX_QUERY_LENGTH=10000      # Maximum characters in a query
MAX_RESULTS_LIMIT=10000     # Maximum number of rows to return
QUERY_TIMEOUT=300000        # 5 minutes in milliseconds
